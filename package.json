{
  "name": "tkclients",
  "version": "1.0.0",
  "description": "Customer micro service",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=prod node server",
    "dev": "DEBUG=server:debug NODE_ENV=dev nodemon server --exec",
    "test": "DEBUG=server:debug NODE_ENV=test mocha --recursive --exit --timeout 10000 tests/",
    "test:ci": "NODE_ENV=test mocha tests/",
    "test-with-coverage": "DEBUG=server:debug NODE_ENV=test nyc mocha --recursive min --exit --timeout 100000 tests/",
    "eslint": "eslint src/**/*.js --ignore-pattern \"node_modules/\""
  },
  "author": "Tikiway",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chai": "^4.3.4",
    "cors": "^2.8.5",
    "debug": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^8.3.2",
    "mongodb-memory-server": "^6.9.6",
    "mongoose": "^5.12.2",
    "morgan": "^1.10.0",
    "nyc": "^15.1.0",
    "request": "^2.88.2",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3"
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ]
  },
  "extends": [
    "eslint: recommanded",
    "plugin: node/recommanded"
  ],
  "env": {
    "node": true,
    "es6": true
  }
}
