{
  "name": "tkclients",
  "version": "1.0.0",
  "description": "Customer micro service",
  "main": "app.js",
  "scripts": {
    "serve": "NODE_ENV=prod node app.js",
    "start": "NODE_ENV=dev nodemon app",
    "dev": "DEBUG=server:debug NODE_ENV=dev nodemon app.js --exec",
    "test": "DEBUG=server:debug NODE_ENV=test mocha --require spec --exit tests/ --exec node",
    "eslint": "eslint src/**/*.js --ignore-pattern \"node_modules/\""
  },
  "author": "Tikiway",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chai": "^4.3.4",
    "cors": "^2.8.5",
    "debug": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^8.3.2",
    "mongoose": "^5.12.2",
    "morgan": "^1.10.0"
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ]
  },
  "extends": [
    "eslint: recommanded",
    "plugin: node/recommanded"
  ],
  "env": {
    "node": true,
    "es6": true
  }
}
